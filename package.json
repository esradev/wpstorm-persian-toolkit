{
  "name": "wpstorm-persian-toolkit",
  "version": "1.0.0",
  "description": "A toolkit for Persian WordPress sites, including Persian date (datepickers), Persian number, and more.",
  "main": "index.js",
  "scripts": {
    "wpbuild": "wp-scripts build",
    "build": "npm-run-all --sequential wpbuild tailwindbuild",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "packages-update": "wp-scripts packages-update",
    "tailwindbuild": "npx @tailwindcss/cli -i ./src/style.css -o ./build/style-index.css --minify",
    "tailwindwatch": "npx @tailwindcss/cli -i ./src/style.css -o ./build/style-index.css --watch --minify",
    "wpstart": "wp-scripts start",
    "start": "npm-run-all --parallel wpstart tailwindwatch",
    "buildalpine": "wp-scripts build assets/js/alpine.js --output-path=assets/alpine",
    "startalpine": "wp-scripts start assets/js/alpine.js --output-path=assets/alpine",
    "plugin-zip": "wp-scripts plugin-zip"
  },
  "files": [
    "assets/**",
    "lib/**",
    "includes/**",
    "languages/**",
    "vendor/**",
    "changelog.md",
    "readme.md",
    "wpstorm-presian-toolkit.php"
  ],
  "author": "esradev",
  "license": "ISC",
  "dependencies": {
    "@hookform/resolvers": "^4.1.0",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tailwindcss/cli": "^4.0.7",
    "@wordpress/element": "^6.18.0",
    "@wordpress/i18n": "^5.18.0",
    "@wordpress/scripts": "~27.2.6",
    "autoprefixer": "^10.4.20",
    "browser-sync": "^2.29.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^6.26.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.7",
    "tailwindcss-animate": "^1.0.7",
    "use-immer": "^0.11.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "browser-sync-webpack-plugin": "^2.3.0"
  }
}
